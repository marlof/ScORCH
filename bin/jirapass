#!/bin/bash
: << DOCUMENTATION
This script securely stores and retrieves a Jira password for a user using OpenSSL encryption.
DOCUMENTATION
##
## Copyright 2017 WebMarcIT Ltd
##
## Licensed under the Apache License, Version 2.0 (the "License");
## you may not use this file except in compliance with the License.
## You may obtain a copy of the License at
##
##    http://www.apache.org/licenses/LICENSE-2.0
##
## A direct copy from keepsafe then modified to securely store a jira password
## for one user
## jirapass -r      read encrypted jirapass
## jirapass -w      write new jirapass
## ssh-keygen -t dsa
## 
set -u

typeset local BASE_DIR= b_Force= READ= WRITE=
typeset local file_Key=~/.ssh/mykey
typeset local file_Cred=~/.ssh/jirapass
str_ProgramName=$(basename $0)
str_ProgramVersion=1.0
key_Method=pbkdf2
#key_Method=aes-256-cbc

fn_Usage()
{
  echo "$0  [ -r  | -w ] 

  -r                  Read the stored value for jirapass.
  -w                  Write a new jirapass.

  -s | --set          Set Jira username and password.
  -c | --check        Check Jira username and password.

  "
}

fn_SetVars()
{
  # Set any variables we need
  :
  AUTH_HEADER=""
  AUTH_HEADER=$(cat ${file_Cred})
}

fn_CheckResponseCode()
{
  # Check HTTP response code from Jira server
  int_ResponseCode=${1:-000}
  case ${int_ResponseCode} in
    200 ) echo "Authorisation succeeded." ;;
    401 ) echo "Unauthorized: Incorrect username or password." ;;
    403 ) echo "Forbidden: You do not have permission to access this resource." ;;
    404 ) echo "Not Found: The requested resource could not be found." ;;
    500 ) echo "Internal Server Error: There is a problem with the Jira server." ;;
    *   ) echo "Unexpected response code: ${int_ResponseCode}" ;;
  esac
}

fn_CheckPassword()
{
  # Simplified password checking function
  fn_SetVars
  if [[ ! -f ${file_Cred} ]] ; then
    echo "Credential file ${file_Cred} does not exist. Please set a password first."
    exit 1
  fi
  AUTH_HEADER=$(cat ${file_Cred})
  int_ResponseCode=$(curl -X GET \
    -s \
    -o /dev/null \
    -w "%{http_code}" \
    -H "Authorization: Basic ${AUTH_HEADER}" \
    http://localhost:8080/rest/api/2/myself)
    fn_CheckResponseCode ${int_ResponseCode}
}

fn_SetPassword()
{
  # Simplified password setting function
  fn_SetVars
  read -p    "username: " str_Username
  read -s -p "password: " str_Password
  echo ""
  AUTH_HEADER=$(echo -n "${str_Username}:${str_Password}" | base64 | tr -d '\n')
  mkdir -p $(dirname ${file_Cred})
  echo "${AUTH_HEADER}" > ${file_Cred}
  if [[ $? -ne 0 ]] ; then
    echo "Error writing to ${file_Cred}"
    exit 1
  else
    echo "Successfully wrote AUTH_HEADER to ${file_Cred}"
  fi
  chmod 600 ${file_Cred}
}

fn_Write()
{
  # Create a file and set its credentials in case we are the first user
  touch ${file_Cred} 2>/dev/null
  chmod 660 ${file_Cred} 2>/dev/null
  [[ ! -w ${file_Cred} ]] && echo "Credential file not writable" && exit 1

  if [[ "$(grep "^${WRITE}=" ${file_Cred})" ]] && [[ -z ${b_Force} ]]; then
    echo "Error: Credential <${WRITE}> already exists. Use -f to force overwrite."
    exit 1
  fi

  while : ; do
    str_Check1=""
    str_Check2=""

    # Get the first password
    str_Prompt="Enter username:password  : "
    while IFS= read -p "${str_Prompt}" -r -s -n 1 chr_Input ; do
      [[ ${chr_Input} == $'\0' ]] && break
      str_Prompt="*"
      str_Check1+="${chr_Input}"
    done
    echo

    # Get the second password
    str_Prompt="Confirm username:password to encrypt: "
    while IFS= read -p "${str_Prompt}" -r -s -n 1 chr_Input ; do
      [[ ${chr_Input} == $'\0' ]] && break
      str_Prompt="*"
      str_Check2+="${chr_Input}"
    done
    echo

    [[ ${str_Check1} != ${str_Check2} ]] && echo "Error: passwords do not match - try again" && exit 1 || break
  done

  grep -v "^${WRITE}=" ${file_Cred} >${file_Cred}.tmp
  str_Check1=$(echo -n $str_Check1 | base64)
  echo "$WRITE=$(echo ${str_Check1} | openssl enc -${key_Method} -a -salt -e -pass file:${file_Key})" >> ${file_Cred}.tmp
  mv ${file_Cred}.tmp ${file_Cred}
  echo "Credential $WRITE written"
}

fn_Read()
{
  str_CRED=$(grep ${READ} ${file_Cred} | cut -d"=" -f2-)
  if [[ ! -z ${str_CRED} ]] ; then
    echo ${str_CRED} | openssl enc -${key_Method} -a -salt -d -pass file:${file_Key}
  else
    echo "Cannot find cred"
  fi
}

b_Force=1
if [[ ! -f ${file_Key} ]]  ; then
  echo "Key file (${file_Key} not available"
  read -p "Do you want to create a private key now? "
  case ${REPLY^^} in
      Y | YES ) echo "Good choice"
                ssh-keygen -f ${file_Key} ;;
      *       ) echo "Cannot continue without a key file." ; exit 1 ;;
  esac
fi

#[[ ! -r  ${file_Key} ]] && echo "Error: Cannot read private key file: ${file_Key}"  && exit 1

if [ $# -ne 0 ] ; then
  while [ $# -gt 0 ] ; do
    case "$1" in
      -h          ) fn_Usage ;;
      -v          ) echo "${str_ProgramName}[${str_ProgramVersion}]" ; exit 0 ;;
      -r          ) READ=jirapass  ; fn_Read  ;;
      -w          ) WRITE=jirapass ; fn_Write ;;
      -e          ) vi ${file_Cred}      ;;

      -s | --set  ) fn_SetPassword       ;;
      -c | --check) fn_CheckPassword     ;;
      -*          ) fn_Usage ; exit 1    ;;
      ## Not yet working          -f          ) shift ; dir_Functions="$(fn_BaseDir ${1})"  ;;
    esac
    shift
  done
fi



#[[ $READ ]] && fn_Read
#[[ $WRITE ]] && fn_Write
:

