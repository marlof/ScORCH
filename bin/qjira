set -euo pipefail
typeset str_ProgramVersion="1.5"

typeset    str_ProgramName="$(basename "$0")"
typeset            dir_Run="$(dirname "$0")"
typeset           dir_Orig="$(cd $dir_Run && pwd)"
typeset          file_Conf="${dir_Run}/../etc/${str_ProgramName}.conf"

typeset VERBOSE=
typeset b_STATUS=
typeset b_ASSIGNEE=
typeset b_DESCRIPTION=
typeset b_TIMESPENT=
typeset b_LABELS=
typeset b_SUMMARY=
typeset PROJECT=
typeset COMMENT=

Error()
{
  echo $@
  exit 1
}

fn_Usage()
{
	echo " ${str_ProgramName} [--set] [--create <project> --summary 'text' --description 'text'] [ -j <jira ID> [ --assign <name> | --transition <state> ] ]  [ -v ]"
}

fn_Help()
{
  # Help
  echo " ${str_ProgramName}

    Using ${file_Conf} to locate the JIRA Server: $JIRA_SERVER

    # Query Options
       -j <ticket number>       Jira Ticket ID
       -u <user:password>

       -s                       Show the state
       -d                       Show the description
       -a                       Show the assignee

    # Extended Query Options
       --timespent              Show time spent
       --labels                 Show labels
       --summary                Show summary

    # Further Options
      -L | --List               List all ticket fields
      -F | --Fields             Show specific fields (comma separated)

    # Help
       -h | --help                          Show help
       -v | --verbose                       Display version

    # Future features and development
       create, assign, transition, comment
       -c | --create            Create a ticket
       -d description
       -s state
       -a assignee
       -set [-d -s -a]

    # Example
       ${str_ProgramName} -j DEP-1         Show full ticket details
       ${str_ProgramName} -s -j DEP-1      Show status
       ${str_ProgramName} -v -j DEP-1      Show the json output
   "
}

[[ ! -r ${file_Conf} ]] && Error "${str_ProgramName} not configured. Expecting JIRA_SERVER= to be set in ${file_Conf}"
source ${file_Conf}
[[ -z $JIRA_SERVER ]] && Error "JIRA_SERVER not exported from shell or not set in ${file_Conf}"

typeset  JIRA_ISSUE_URL=${JIRA_SERVER}/rest/api/2/issue
typeset JIRA_SEARCH_URL=${JIRA_SERVER}/rest/api/2/search

typeset      TICKET=$1

typeset       STATUS= ASSIGNEE= DESCRIPTION= VERBOSE= DESCRIPTION=simple SET=

typeset   PYTHON=$(which python)
typeset     CURL=$(which curl)     || Error "curl command not found. Please install curl or add to PATH"
which jirapass || Error "jirapass command not found. Please install jirapass or add to PATH"
typeset JIRAPASS=$(which jirapass)

# Jira pass will now be used - turning off hard coded password
# typeset        AUTH='demo:test123'
# typeset AUTH_HEADER=$(echo -n $AUTH | base64)
! ${JIRAPASS} -r >/dev/null 2>&1 && echo "${JIRAPASS} issues: $(${JIRAPASS} -r)" && exit 1
AUTH_HEADER=$(${JIRAPASS} -r)
#jirapass -r

fn_CheckResponse()
{
  local RESPONSE=${1}
  case ${RESPONSE} in
    HTTP*20*  ) : ;;
    HTTP*400* ) Error "$0: Internal error while trying to insert file message:\n${RESPONSE}" ;;
    HTTP*401* ) Error "$0: Check username and password are correct in ${JIRA_PASSWORD_FILE}" ;;
    HTTP*404* ) Error "$0: Cannot find the JIRA ticket. Check ${JIRA_SERVER}/browse/${_JIRA_ID}" ;;
    HTTP*405* ) Error "$0: Method not allowed" ;;
    *         ) Error "$0: Unhandled error from curl jira ticket check:\n${RESPONSE}" ;;
  esac

}

fn_CreateTicket()
{
  [[ -z $PROJECT ]] && echo "Project not set" && fn_Usage && exit 1
  #!/bin/bash
  file_Data=$(mktemp)
  #_JIRA="http://ukdc1-tc-jir02.mydomain.local:8080/rest/api/2/issue/"
  cat >> ${file_Data} << EOF
{
    "fields": {
       "project":
       {
          "key": "$PROJECT"
       },
       "summary": "$SUMMARY",
       "description": "$DESCRIPTION",
       "issuetype": {
          "name": "Task"
       }
   }
}
EOF
  RESPONSE=$(curl -k -s \
     -D- \
     -H "Authorization: Basic ${AUTH_HEADER}" \
     -X POST \
     --data @${file_Data} \
     -H "Content-Type: application/json" \
     ${JIRA_ISSUE_URL} | grep ^HTTP )
  fn_CheckResponse $RESPONSE
  rm $file_Data
}

fn_AddComment()
{
  file_Data=$(mktemp)
  echo "Adding comment $COMMENT to $TICKET"
  cat >> ${file_Data} << EOF
{
    "body": "$COMMENT"
}
EOF

  echo ${JIRA_ISSUE_URL}/${TICKET}
  RESPONSE=$(curl -k -s \
     -D- \
     -H "Authorization: Basic ${AUTH_HEADER}" \
     -X POST \
     --data @${file_Data} \
     -H "Content-Type: application/json" \
     ${JIRA_ISSUE_URL}/${TICKET}/comment | grep ^HTTP)
  fn_CheckResponse $RESPONSE
  rm $file_Data

}

fn_GetTransitionID()
{
  local typeset l_str_Ticket=${1}
  local typeset l_str_Transition="${2}"

  echo ${JIRA_ISSUE_URL}/${TICKET}
  RESPONSE=$(curl -k -s \
     -H "Authorization: Basic ${AUTH_HEADER}" \
     -X GET \
     -H "Content-Type: application/json" \
     ${JIRA_ISSUE_URL}/${TICKET}/transitions | jq -r '.transitions[] | select(.name | contains ("'"${l_str_Transition}"'")) .id')
  fn_CheckResponse $RESPONSE
  echo $RESPONSE
}

fn_JiraAPI()
{
  local typeset l_str_Method=${1}
  local typeset l_str_URL=${2}
  local typeset l_str_Params=${3}

  echo curl -k -sS \
     -H "Authorization: Basic ${AUTH_HEADER}" \
     -H "Content-Type: application/json" \
     -X ${l_str_Method} \
     ${l_str_URL} ${l_str_Params}
}

fn_NiceTime()
{
  # Takes time in seconds and returns a human readable format
  local typeset l_str_TimeSpent=${1}
  local typeset l_str_NiceTime=""
  local typeset l_str_Days=""
  local typeset l_str_Hours=""
  local typeset l_str_Minutes=""
  local typeset l_str_Seconds=""

  l_str_Days=$(( l_str_TimeSpent / 86400 ))
  l_str_Hours=$(( (l_str_TimeSpent % 86400) / 3600 ))
  l_str_Minutes=$(( (l_str_TimeSpent % 3600) / 60 ))
  l_str_Seconds=$(( l_str_TimeSpent % 60 ))

  [[ ${l_str_Days} -gt 0 ]]    && l_str_NiceTime="${l_str_NiceTime}${l_str_Days}d "
  [[ ${l_str_Hours} -gt 0 ]]   && l_str_NiceTime="${l_str_NiceTime}${l_str_Hours}h "
  [[ ${l_str_Minutes} -gt 0 ]] && l_str_NiceTime="${l_str_NiceTime}${l_str_Minutes}m "
  [[ ${l_str_Seconds} -gt 0 ]] && l_str_NiceTime="${l_str_NiceTime}${l_str_Seconds}s "
  echo "${l_str_NiceTime}"
}

fn_ShowFields()
{
  local typeset l_str_Ticket=${1}
  local typeset l_str_Fields=${2:-}

  RESPONSE=$(${CURL} -k -s \
                    -H "Authorization: Basic ${AUTH_HEADER}" \
                    -H "Content-Type: application/json" \
                    -X POST \
                    --data '{"jql":"key = '${l_str_Ticket}'","fields":['${l_str_Fields}']}' \
                    "${JIRA_ISSUE_URL}")

  [[ ${VERBOSE} ]] && echo " ${CURL} -k -s \
                    -H \"Authorization: Basic ${AUTH_HEADER}\" \
                    -H \"Content-Type: application/json\" \
                    -X POST \
                    --data '{\"jql\":\"key = '${l_str_Ticket}'\",\"fields\":['${l_str_Fields}']}' \
                    \"${JIRA_ISSUE_URL}\" "
  if echo ${RESPONSE} | grep -q "errorMessages" ; then
    echo "Error. Check jira API messages:"
    echo "${RESPONSE}" | jq '.errorMessages'
    exit 1
  else
    echo "${RESPONSE}" | jq '.issues[].fields | keys[] as $k | "\($k): \(.[$k])"'
  fi

}

fn_AssignTicket()
{
  file_Data=$(mktemp)
#_JIRA="http://ukdc1-tc-jir02.worldpaytd.local:8080/rest/api/2/issue/"
  echo "assigning $TICKET to ${ASSIGNEE}"
  cat >> ${file_Data} << EOF
{
   "fields": {
       "assignee":{"name":"${ASSIGNEE}"}
   }
}
EOF

  RESPONSE=$(curl -k -s \
     -D- \
     -H "Authorization: Basic ${AUTH_HEADER}" \
     -X PUT --data @${file_Data} \
     -H "Content-Type: application/json" \
     ${JIRA_ISSUE_URL}/${TICKET} | grep ^HTTP)
  fn_CheckResponse "$RESPONSE"
  rm $file_Data
}

fn_ShowTicket()
{
  local l_str_Ticket="${1:-}"
  local _JIRA_ISSUE_DETAILS=$(${CURL} -k -s \
                             -H "Authorization: Basic ${AUTH_HEADER}" \
                             -H "Content-Type: application/json" \
                             -X GET  \
                             --data '{"jql":"issuekey = '${l_str_Ticket}'"}' \
                             "${JIRA_ISSUE_URL}")

  [[ ${VERBOSE} ]] && echo "${CURL} -k -s \
                             -H \"Authorization: Basic ${AUTH_HEADER}\" \
                             -H \"Content-Type: application/json\" \
                             -X GET  \
                             --data '{\"jql\":\"issuekey = '${l_str_Ticket}'\"}' \
                             \"${JIRA_ISSUE_URL}\""

  if echo ${_JIRA_ISSUE_DETAILS} | grep -q "Unauthorized" ; then
    Error "Invalid jira username:password"
  fi
  if echo ${_JIRA_ISSUE_DETAILS} | grep -q "errorMessages" ; then
    echo "Error. Check jira API messages:"
    echo "${_JIRA_ISSUE_DETAILS}" | jq '.errorMessages'
    exit 1
  fi

  STATUS=$(      jq -select '[.[].issues[]] | unique_by(.key)[] | .fields .status .name' <<< "${_JIRA_ISSUE_DETAILS}")
  ASSIGNEE=$(    jq -select '.fields .assignee .name' <<< "${_JIRA_ISSUE_DETAILS}")
  SUMMARY=$(     jq -select '.fields .summary' <<< "${_JIRA_ISSUE_DETAILS}")
  DESCRIPTION=$( jq -select '.fields .description' <<< "${_JIRA_ISSUE_DETAILS}")
  TIMESPENT=$(   jq -select '.fields .timespent' <<< "${_JIRA_ISSUE_DETAILS}")
  LABELS=$(      jq -select '.fields .labels' <<< "${_JIRA_ISSUE_DETAILS}")

  [[ ${SUMMARY} ]]     && printf "Summary:"  && echo ${_JIRA_ISSUE_DETAILS} | jq '.fields .summary'
  [[ ${DESCRIPTION} ]] && printf "Description:" && echo ${_JIRA_ISSUE_DETAILS} | jq '.fields .description'
  [[ ${TIMESPENT} ]]   && printf "Time Spent:" && l_str_NiceTime=$(fn_NiceTime $(echo ${_JIRA_ISSUE_DETAILS} | jq '.fields .timespent')) && echo "${l_str_NiceTime}"
  [[ ${LABELS} ]]      && printf "Labels:"   && echo ${_JIRA_ISSUE_DETAILS} | jq '.fields .labels'
  [[ ${STATUS} ]]      && printf "Status:"   && echo ${_JIRA_ISSUE_DETAILS} | jq '.fields .status .name'
  [[ ${ASSIGNEE} ]]    && printf "Assignee:" && echo ${_JIRA_ISSUE_DETAILS} | jq '.fields .assignee .name'

}

fn_ShowTickets()
{
  jql_query="${@}"
  int_MaxResults=50
  int_StartAt=0
  int_Total=1

  while [ ${int_StartAt} -lt ${int_Total} ] ; do
    RESPONSE=$(${CURL} -k -s \
               -H "Authorization: Basic ${AUTH_HEADER}" \
               -H "Content-Type: application/json" \
               -X POST \
               --data '{"jql":"'"${jql_query}"'","startAt":'${int_StartAt}',"maxResults":'${int_MaxResults}'}' \
               "${JIRA_SEARCH_URL}")

    echo ${RESPONSE} | jq -r '.issues[] | "\(.key): \(.fields.summary)"'

    int_Total=$(echo ${RESPONSE} | jq '.total')
    int_IssuesReturned=$(echo ${RESPONSE} | jq '.issues | length')
    echo "Showing issues ${int_StartAt} to $(( int_StartAt + int_IssuesReturned - 1 )) of ${int_Total}"
    int_StartAt=$(( int_StartAt + int_IssuesReturned ))
  done

}

fn_ShowTicket_old()
{
  _JIRA_ISSUE_DETAILS=$(${CURL} -k -s -X POST -H "Authorization: Basic ${AUTH_HEADER}" \
                             -H "Content-Type: application/json" \
                             --data '{"jql":"key = '${TICKET}'"}' \
                             "${JIRA_SEARCH_URL}")
  [[ ${VERBOSE} ]] && echo "4{CURL} -k -s -X POST -H \"Authorization: Basic ${AUTH_HEADER}\" \
                              -H \"Content-Type: application/json\" \
                              --data '{\"jql\":\"key = '${TICKET}'\"}'
                              \"${JIRA_SEARCH_URL}\"
"
  [[ ${VERBOSE} ]]     && echo "${_JIRA_ISSUE_DETAILS}"


  echo "${_JIRA_ISSUE_DETAILS}" | grep -q '<p>Problem accessing /rest/api/2/search' && Error "Problem accessing REST Api. Check JIRA_SERVER in ${file_Conf}"
  echo "${_JIRA_ISSUE_DETAILS}" | grep -q '<title>Unauthorized (401)</title>'       && Error "Invalid jira username:password"
  echo "${_JIRA_ISSUE_DETAILS}" | grep -q "Reason : AUTHENTICATION_DENIED"          && Error "Password may be valid but account may be temporarily locked"
  echo "${_JIRA_ISSUE_DETAILS}" | grep -q "^<?xml"          && Error "${_JIRA_ISSUE_DETAILS}. New issue when trying to run "
  [[ -z ${_JIRA_ISSUE_DETAILS} ]] && Error "Jira page seems blank - has jira $JIRA_SERVER started correctly '${dir_Orig}/${str_ProgramName}'"
  if echo ${_JIRA_ISSUE_DETAILS} | grep -q "errorMessages" ; then
    #if echo "${_JIRA_ISSUE_DETAILS}" ; then #| jshon -e errorMessages -a -u | grep -q "does not exist for field 'key'" ; then
    if echo "${_JIRA_ISSUE_DETAILS}" | jq '.errorMessages' | grep -q "does not exist for field 'key'" ; then
      echo "Ticket '${TICKET}' cannot be found"
    else
      echo "Error. Check jira API messages:"
      echo "${_JIRA_ISSUE_DETAILS}" | jq '.errorMessages' #| jshon -e errorMessages -a -u
    fi
    exit 1
  elif echo ${_JIRA_ISSUE_DETAILS} | grep -q '^{"startAt":' ; then
    echo "You can't view this issue. It may have been deleted or you don't have permission to view it."
    exit 1
  elif echo ${_JIRA_ISSUE_DETAILS} | grep -q "${str_ProgramName}:ERROR" ; then
    echo "Check Jira server ${JIRA_SERVER}"
    $CURL -s  -X POST -H     "Authorization: Basic ${AUTH_HEADER}" \
                      -H     "Content-Type: application/json" "${JIRA_SEARCH_URL}"
    exit 1
  fi

  [[ ${STATUS} ]]      && printf "Status:"   && echo ${_JIRA_ISSUE_DETAILS} | jq '.issues[].fields .status .name' #| jshon -e issues -a -e fields -e status -e name -u
  [[ ${ASSIGNEE} ]]    && printf "Assignee:" && echo ${_JIRA_ISSUE_DETAILS} | jq '.issues[].fields .assignee .name' #| jshon -e issues -a -e fields -e assignee -e name -u
  if [[ "${DESCRIPTION}" = "1"  ]]  ; then
    printf "Description:\n"
    #echo ${_JIRA_ISSUE_DETAILS} #| jshon -e issues -a -e fields -e description -u
    echo ${_JIRA_ISSUE_DETAILS} | jq '.issues[].fields .description' #.description' #.description' # | grep "\"description\":"
  elif [[ ${DESCRIPTION} ]] ; then
    #echo ${_JIRA_ISSUE_DETAILS} #| jshon -e issues -a -e fields -e description -u  
    echo ${_JIRA_ISSUE_DETAILS} | jq '.issues[].fields' | grep -v "\"customfield_[0-9]*\": null"
  fi
}

set -x

if [ $# -ne 0 ] ; then
  while [ $# -gt 0 ] ; do
    case "$1" in

      # Help and version modes
      -h | --help    ) fn_Help ; exit 0 ;; #b_Help=1 ;;
      -v             ) VERBOSE=1 ;;
      --version ) echo "${str_ProgramName}[${str_ProgramVersion}]" ; exit 0 ;;

      ## API Mode
      -j | --jira    ) shift ; TICKET=$1 ;;
      -u             ) shift ;   AUTH=$1 ;;

      --jql          ) shift ; JQL_QUERY=$1 ; fn_ShowTickets "$JQL_QUERY" ; exit 0 ;;

      ## Extended Query Options
      --timespent    ) b_TIMESPENT=1 ;;
      --labels       ) b_LABELS=1 ;;
      --summary      ) b_SUMMARY=1 ;;

      ## Further Options
      -L | --list    ) fn_ShowFields $TICKET ; exit 0 ;;
      -F | --fields  ) shift ; FIELDS=$1 ; fn_ShowFields $TICKET "$FIELDS" ; exit 0 ;;

      ## Not yet working
      -set | --set  ) SET=1 ;;
#shift ; str_Assignee=$1 ; fn_AssignTicket ; exit 0 ;;
      -s            ) if [[ "$SET" -eq 1 ]] ; then
                        shift ; STATUS=$1 ; echo here
                      else
                        STATUS=1   ; DESCRIPTION=
                      fi ;;
      -a            ) if [[ "$SET" -eq 1 ]] ; then
                        shift ; ASSIGNEE=$1
                      else
                        ASSIGNEE=1 ; DESCRIPTION=
                      fi ;;
      -d            ) DESCRIPTION=1 ;;
      -c | --create ) shift ; PROJECT=$1 ;;
      --summary     ) shift ; SUMMARY=$1 ;;
      --description ) shift ; DESCRIPTION=$1 ;;
      --comment     ) shift ; COMMENT=$1 ;;



    esac
    shift
  done
fi

if [[ $PROJECT ]] ; then
  fn_CreateTicket
  exit 0
fi

if [[ $COMMENT ]] ; then
  fn_AddComment
  exit 0
fi

if [[ $SET ]] ; then
  echo setting
  if [[ $ASSIGNEE ]] ; then
    fn_AssignTicket
  else
    echo something else
  fi
else
  fn_ShowTicket
fi


