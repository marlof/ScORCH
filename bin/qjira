# Issue description
echo ${TICKET}
echo ${_JIRA_ISSUE_DETAILS} | grep -q "qjira:ERROR" && echo "Jira issue. Check Jira is running, username/password or ticket number" && exit 1
echo ${_JIRA_ISSUE_DETAILS} | jshon -e issues   -a -e fields  -e description -u

